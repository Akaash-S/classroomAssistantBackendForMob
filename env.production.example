# Production Environment Variables
# Copy this file to .env.production and update with your production values

# Database Configuration (Production PostgreSQL)
DATABASE_URL=postgresql://username:password@your-production-db-host:5432/classroom_assistant_prod

# Supabase Configuration (Production)
SUPABASE_URL=https://your-production-project.supabase.co
SUPABASE_KEY=your-production-anon-key
SUPABASE_SERVICE_KEY=your-production-service-key

# RapidAPI Configuration
RAPIDAPI_KEY=your-production-rapidapi-key
RAPIDAPI_HOST=speech-to-text-ai.p.rapidapi.com

# Gemini API Configuration
GEMINI_API_KEY=your-production-gemini-api-key

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-production-secret-key-here

# CORS Configuration (Update with your production domains)
CORS_ORIGINS=https://your-production-frontend.com,https://your-mobile-app-domain.com

# Production-specific settings
WORKERS=4
TIMEOUT=120
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
